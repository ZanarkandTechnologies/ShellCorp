{
  "workspaceDir": "./workspace",
  "dataDir": "~/.fahrenheit",
  "brainAgentId": "brain",
  "heartbeat": {
    "enabled": true,
    "intervalMinutes": 30,
    "promptPath": "HEARTBEAT.md"
  },
  "channels": {
    "telegram": {
      "enabled": false,
      "botToken": "$TELEGRAM_BOT_TOKEN",
      "allowFrom": ["*"]
    },
    "discord": {
      "enabled": false,
      "token": "$DISCORD_BOT_TOKEN",
      "allowFrom": []
    },
    "slack": {
      "enabled": false,
      "botToken": "$SLACK_BOT_TOKEN",
      "appToken": "$SLACK_APP_TOKEN",
      "allowFrom": []
    },
    "whatsapp": {
      "enabled": false,
      "allowFrom": [],
      "authDir": "~/.fahrenheit/credentials/whatsapp",
      "printQr": true
    }
  },
  "providers": {
    "notion-comments": {
      "enabled": true,
      "mode": "observational",
      "allowFrom": ["*"]
    },
    "discord-comments": {
      "enabled": true,
      "mode": "observational",
      "allowFrom": ["*"]
    }
  },
  "gateway": {
    "host": "127.0.0.1",
    "port": 8787,
    "ingestToken": "$FAHRENHEIT_INGEST_TOKEN"
  },
  "convex": {
    "enabled": true,
    "deploymentUrl": "$CONVEX_URL",
    "authToken": "$CONVEX_AUTH_TOKEN"
  },
  "skills": [
    { "path": "./workspace/skills/github" },
    { "path": "./workspace/skills/notion" }
  ],
  "logSink": "file"
}
